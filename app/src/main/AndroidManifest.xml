<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.focusedpoint.weighttracker">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BMIActivity"
            android:theme="@style/AppTheme.NoActionBar"/>


        <activity android:name=".FMIActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".AppMainScreen"
                  android:theme="@style/AppTheme.NoActionBar"/>


        <activity android:name=".SignUpActivity"
                  android:theme="@style/AppTheme.NoActionBar"/>


        <activity android:name=".ui.login.LoginActivity"
                  android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".VisitorActivity"></activity>
        <activity android:name=".Stats_Activity" />
        <activity
            android:name=".FoodTrackerActivity"
            android:label="@string/title_activity_food_tracker"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>